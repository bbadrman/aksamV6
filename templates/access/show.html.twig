{% extends 'base.html.twig' %}

{% block title %}Information du
	{{ user.firstname }}
	{{ user.lastname }}- Aksam
{% endblock %}

{% block body %}
	<div class="container">
		<section class="content-header">
			<h1>
				Acces Utilisateur

			</h1>
			<ol class="breadcrumb">
				<li>
					<a href="{{ path('user_index') }}">
						<i class="fa fa-users"></i>
						Tous le utilisateurs</a>
				</li>
				<li class="active">{{ user.firstname }}
					{{ user.lastname }}</li>
			</ol>
		</section>

		<div class="col-md-12 mt">

			<div class="content-panel">
				<table class="table table-hover">
					<h4>
						<i class="fa fa-angle-right"></i>
						L'tilisateur
						<b>{{ user.firstname }}
							{{ user.lastname }}</b>
					</h4>


					<p class="centered">


						<img src=" {{ asset('images/aksamLogo.jpeg') }} " class="img-circle" width="80" alt="">
					</p>
				</a>

			</p>
			<hr>

			<thead>
				<tr>
					<div class="btn-group pull-right" style="margin-right: 5px;">
						{% if is_granted('ROLE_ADMIN') == true %}
							<button type="button" class="btn btn-danger">Action</button>
							<button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<span class="caret"></span>
								<span class="sr-only">Toggle Dropdown</span>
							</button>
						{% endif %}
						<ul class="dropdown-menu">
							<li>

								<a href="{{ path('user_edit', {'id': user.id}) }}">
									<i class="fa fa-edit"></i>
									Modifier
								</a>
							</li>
							<li class="show-delete">
								{{ include('user/_delete_form.html.twig') }}
							</li>
							<li role="separator" class="divider"></li>
							<li>
								<a href="{{ path('user_index') }}">
									<i class="fa fa-undo"></i>
									Retour a la liste des utilisateurs
								</a>
							</li>
						</ul>
					</div>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Utilisateur</td>

					<td>Date d'acc√®s</td>
					<td>Date de sortie</td>
				</tr>
				<tr>
					<td>{{ user.username }}</td>


					<td>
						{% for acces in user.acces|reverse %}
							{% if acces.accessDate is not empty %}
								{{ acces.accessDate|date('d/m/Y H:i:s') }}
							{% endif %}
							<br>
						{% endfor %}
					</td>
					<td>
						{% for acces in user.acces|reverse %}
							{% if acces.logoutDate is not empty %}
								{{ acces.logoutDate|date('d/m/Y H:i:s') }}
							{% endif %}
							<br>
						{% endfor %}
					</td>


				</tr>
			</tbody>
		</table>
	</div>
</div></div>{% endblock %}
