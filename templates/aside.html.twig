{% if app.user is not null %}

	{% set page = app.request.get('_route') %}


	<p class="centered">

		<a href="{% if app.user is not null %} {{ path('user_show', {'id':app.user.id }) }}{% else %} {{ asset('images/no-image.png') }}{% endif %}">

