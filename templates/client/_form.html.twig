<div class="form-panel">
	<h4 class="mb">
		<i class="fa fa-plus-square-o"></i>
		{{ form_title|default('Ajouter un client') }}
	</h4>

	<div class="form-group">
		{{ form_start(form) }}

		{# {{ form_widget(form) }} #}


		{{ form_row(form.firstname) }}
		{{ form_row(form.lastname) }}
		{{ form_row(form.raisonSociale) }}

		{{ form_row(form.phone) }}
		{{ form_row(form.email) }}
		{{ form_row(form.adress) }}
		{% if app.user %}
			{{ form_row(form.status) }}
		{% endif %}


		{{ form_row(form.comment) }}

		<button class="btn btn-theme">{{ button_label|default('Save') }}</button>

		{{ form_end(form) }}
	</div>
</div>
