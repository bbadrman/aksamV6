{% extends 'base.html.twig' %}

{% block title %}Contrat index
{% endblock %}

{% block body %}
	{% for label,  messages in app.flashes  %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					{{ message | raw }}
				{% endfor %}

			</div>
		</div>

	{% endfor %}
	{% for message in app.flashes('warning') %}
		<div class="alert alert-warning">
			{{ message }}
		</div>
	{% endfor %}
	<section class="content-header">

		<h2>Contrats</h2>


		<ol class="breadcrumb">
			<li>
				<a href="{{ path('dashboard') }}">
					<i class="fa fa-dashboard"></i>
					Tableau de bord</a>
			</li>
			<li class="active">
				<a href="{{ path('app_table_liste') }}">
					<i class="fa fa-users"></i>
					Toutes les Tables</a>
			</li>
			<!-- NOTIFICATION DROPDOWN -->
			<li id="header_notification_bar" class="dropdown">
				<a data-toggle="dropdown" class="dropdown-toggle" href="#">
					<i class="fa fa-shopping-cart"></i>
					<span class="badge bg-warning">{{ contrats|length }}
					</span>
				</a>

			</li>
			<!-- END NOTIFICATION DROPDOWN -->
		</ol>
		<br>
	</section>
	{# <div class="col-xs-12" style="float: right !important;">
				<div class="row" style="margin-right: 10px;">{% include 'contrat/_search_form.html.twig' with {search_form: search_form} only %}
				</div>
			</div> #}
	<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel">
				<hr>
				<table class="table table-striped table-advance table-hover">
					<thead>
						<tr>
							<th>CONSEILLER</th>
							<th>Nom</th>
							<th>Prenom</th>
							<th>EtatContrat</th>
							<th>RaisonSociale</th>
							<th>DateSouscrpt</th>
							<th>DateEffet</th>
							<th>Type</th>
							<th>Activite</th>
							<th>Partenaire</th>
							<th>Compagnie</th>
							<th>JourPrlevm</th>
							<th>Fraction</th>
							<th>Cotisation</th>
							<th>Produit</th>
							<th>Acompte</th>
							<th>Frais</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for contrat in contrats %}
							<tr>
								<td>{{ contrat.comrcl }}</td>
								<td>{{ contrat.nom }}</td>
								<td>{{ contrat.prenom }}</td>
								<td>{{ contrat.etat }}</td>
								<td>{{ contrat.raisonSociale }}</td>
								<td>{{ contrat.dateSouscrpt ? contrat.dateSouscrpt|date('Y-m-d   ') : '' }}</td>
								<td>{{ contrat.dateEffet ? contrat.dateEffet|date('Y-m-d  ') : '' }}</td>
								<td>{{ contrat.type }}</td>
								<td>{{ contrat.activite }}</td>
								<td>{{ contrat.partenaire }}</td>
								<td>{{ contrat.compagnie }}</td>
								<td>{{ contrat.jourPrelvm }}</td>
								<td>{{ contrat.fraction }}</td>
								<td>{{ contrat.cotisation }}</td>
								<td>{{ contrat.products }}</td>
								<td>{{ contrat.acompte }}</td>
								<td>{{ contrat.frais }}</td>
								<td>
									{% if contrat.updatedAt %}
										Modifié
									{% else %}
										Non modifié
									{% endif %}
								</td>
								<td>
									{# {% if  is_granted('ROLE_ADMIN')   or is_granted('ROLE_GESTION')     %}
																																																																																																																																																																																																																																																																																																																																					<a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-success btn-xs">
																																																																																																																																																																																																																																																																																																																																						<i class="fa fa-eye"></i>
																																																																																																																																																																																																																																																																																																																																					</a>
																																																																																																																																																																																																																																																																																																																																				{% endif %} #}

									{% if contrat.status == 1 %}
										<a href="#" style="color:blue">
											Valider
										</a>
									{% elseif contrat.status == 2  %}
										<a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-danger btn-xs">
											Rejeter
										</a>

									{% elseif contrat.status is null %}
										{% if  is_granted('ROLE_ADMIN')   or is_granted('ROLE_VALIDE')     %}
											<a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-primary btn-xs">
												Nouveau
											</a>
										{% else %}
											En verification
										{% endif %}

									{% endif %}
									{# <a href="{{ path('contrat_sav_new', {'id': contrat.id}) }}" class="btn btn-primary btn-xs">
																																																																																											SAV
																																																																																										</a> #}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="18">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot class="text-center">
						<tr>
							{# <td colspan="10">
															{{ knp_pagination_render(contrats, 'pagination.html.twig') }}
														</td> #}
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
