<button type="button" class='btn btn' style="background-color:#7a96ea;" data-toggle="modal" data-target="#AddClientModal{{ prospect.id }}">
	Ajouter Client
</button>
<div class="col-sm-8">
	{% if not form.vars.valid %}
		<ul class="alert-danger">
			{% for child in form.children %}
				{% if child.vars.errors is defined %}
					{% for error in child.vars.errors %}
						<li>{{ error.message }}</li>
					{% endfor %}
				{% endif %}
			{% endfor %}
		</ul>
	{% endif %}
</div>
<div class="modal" id="AddClientModal{{ prospect.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header modal-header-info">
				<h3 class="modal-title" id="exampleModalLabel">
					<i class="fa fa-plus-square-o"></i>

				</h3>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Ã—</span>
				</button>
			</div>

			<div class="modal-body">
				<div
					class="form-group">
					{# {% set url = path('client_add', {'id': prospect.id}) %}
																				{{ form_start(form, {'action':url}) }} #}
					{{ form_start(form) }}


					<div style="display: none">
						{{ form_row(form.firstname) }}
						{{ form_row(form.lastname) }}
						{{ form_row(form.raisonSociale) }}
					</div>


					{{ form_row(form.phone) }}
					{{ form_row(form.email) }}
					{{ form_row(form.adress) }}

					<button class="btn btn-theme">
						{{ button_label|default('Save') }}</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>
