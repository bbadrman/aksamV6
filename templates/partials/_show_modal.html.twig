		<table class="table table-striped table-advance table-hover">
			<thead>
				<tr style="text-align: left; font-size:14px; height: 20px;">
					{% if is_granted('ROLE_ADMIN') == true %}
						<th>Equipe</th>
						<th>Chef</th>
						<th>Comrcl</th>
						{# <th>Affecte</th> #}
					{% else %}

						<th>Comrl</th>
						<th>Nbre</th>
					{% endif %}


					<th>Parnge</th>
					<th>Appl
					</th>
					<th>Avenant</th>
					<th>Ancienne
					</th>

					<th>Site
					</th>
					<th>Revdr
					</th>

				</tr>
			</thead>

			<tbody>

				{% if is_granted('ROLE_ADMIN') == true %}
					{% for teams in team %}
