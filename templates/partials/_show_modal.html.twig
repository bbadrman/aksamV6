										{{ " %02d"|format( teams.prospects|filter(p => p.motifSaise is null and p.source == 'Propre site'   and p.creatAt|date('Y-m-d') == "now"|date('Y-m-d'))|length) }}</strong>
								</span>
							</td>
							<td>
								<span class='btn btn' style="background-color:Aquamarine;">
									<strong>
										{{ " %02d"|format( teams.prospects|filter(p => p.motifSaise is null and p.source == 'Revendeur'   and p.creatAt|date('Y-m-d') == "now"|date('Y-m-d'))|length) }}
									</strong>
								</span>
							</td>
						</tr>
