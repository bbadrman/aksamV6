<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalR{{ prospect.id }}">

	<i class="fa fa-clock-o" aria-hidden="true"></i>
</button>


<!-- Modal -->
<div class="modal fade" id="exampleModalR{{ prospect.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Prospect du Mr:
					{{ prospect.name }}</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{% set url = path('app_prospect_relance', {'id': prospect.id}) %}
			{{ form_start(form, {'action':url}) }}


			{{ form_widget(form.motifRelanced) }}
			{{ form_widget(form.relacedAt) }}
			{{ form_widget(form.comment) }}


			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
				<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
				{# <button type="submit" class="btn btn-primary w-100" formnovalidate>Update</button> #}
				{{form_end(form)}}
			</div>
		</div>
	</div>
</div>
