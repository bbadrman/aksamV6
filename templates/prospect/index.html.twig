											<td style="color:red">{{ prospect.email }}</td>
										{% else %}
											<td>{{ prospect.email }}</td>
											{% set emails = emails|merge([prospect.email]) %}
										{% endif %}
									{% endif %}
								</td>
								<td>
									{% if prospect.gsm is not empty  %}
