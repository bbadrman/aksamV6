							{# <th>Ancienne</th>#}
							{# <th>Motife Resil</th> #}

								{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEAM') == true or is_granted('ROLE_AFFECT') %}
									<th>
								option
							</th>

							{% endif %}
								<th>
							actions
						</th>

					</tr>
				</thead>
			</tr>
			</thead>
