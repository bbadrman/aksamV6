{% extends 'base.html.twig' %}

{% block title %}Recherche Prospect
{% endblock %}

{% block body %}

	{% for label,  messages in app.flashes  %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					{{ message | raw }}
				{% endfor %}

			</div>
		</div>
	{% endfor %}
	<section class="content-header">
		{% if app.request.get('_route') == 'newprospect_index' %}
			<h2>Nouveaux Prospects</h2>
		{% elseif app.request.get('_route') == 'prospect_search' %}
			<h2>Recherche a tous Prospects</h2>
		{% elseif app.request.get('_route') == 'relancejour_index' %}
			<h2>Recherche Les Relances du Jour</h2>
		{% elseif app.request.get('_route') == 'avenir_index' %}
			<h2>Recherche Les Relances à venir</h2>
		{% elseif app.request.get('_route') == 'app_unjoinable' %}
			<h2>Recherche Les Unjoiniables</h2>
		{% elseif app.request.get('_route') == 'notrait_index' %}
			<h2>Recherche Les Prospects Non Traités</h2>

		{% endif %}
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('dashboard') }}">
					<i class="fa fa-dashboard"></i>
					Tableau de bord</a>
			</li>
			<li class="active">
				<a href="{{ path('app_prospect_index') }}">
					<i class="fa fa-users"></i>
					Tous les Prospects</a>
			</li>
			<!-- NOTIFICATION DROPDOWN -->
			<li id="header_notification_bar" class="dropdown">
				<a data-toggle="dropdown" class="dropdown-toggle" href="#">
					<i class="fa fa-shopping-cart"></i>
					<span class="badge bg-warning">{{ prospects|length }}
					</span>
				</li>
			</li>
		</a>

	</li>
	<!-- END NOTIFICATION DROPDOWN -->
</ol>
