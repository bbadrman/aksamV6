	</style>

	<div class="container">
		<div class="jumbotron mt-2">
			<h1 class="display-3 text-center">
				<i class="fa fa-diamond "></i>
				PROSPECTS
				<i class="fa fa-diamond "></i>
			</h1>
			<hr class="my-4">
			<div
				class="col-md-12">


				<!-- /col-md-4-->

				<div
					class="col-md-3 col-sm-3 mb">
					<!-- REVENUE PANEL -->
					<div class="green-panel pn">


						<div class="green-header">
							<h2>NOUVEAUX</h2>
						</div>
						<a href="{{ path('newprospect_index')}}">
							<i class="fa fa-newspaper-o fa-4x" aria-hidden="true"></i>

							{% if is_granted('ROLE_ADMIN')  == true %}
								<h1>{{ " %02d"|format(stats.prospectsPasAffect ) }}</h1>
							{% elseif is_granted('ROLE_TEAM') == true %}
								<h1>{{ " %02d"|format(stats.prospectsChefNv ) }}</h1>
							{% elseif is_granted('ROLE_USER') == true %}
								<h1>{{ " %02d"|format(stats.prospectsCmrclNv ) }}</h1>
							{% endif %}
						</a>
					</div>
				</div>

				<div
					class="col-md-3 col-sm-3 mb">
					<!-- REVENUE PANEL -->
					<div class="green-panel pn">


