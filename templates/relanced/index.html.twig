{% extends 'base.html.twig' %}

{% block title %}Liste des Relances - Aksam
{% endblock %}

{% block body %}
	{% for label,  messages in app.flashes  %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					{{ message | raw }}
				{% endfor %}

			</div>
		</div>
	{% endfor %}
	<section class="content-header">
		{% if app.request.get('_route') == 'newRelance_index' %}
			<h2>Nouveaux Relances</h2>
		{% elseif app.request.get('_route') == 'allprosp_index' %}
			<h2>Tous Relances</h2>
		{% elseif app.request.get('_route') == 'relancejour_index' %}
			<h2>Les Relances du Jour</h2>
		{% endif %}
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('dashboard') }}">
					<i class="fa fa-dashboard"></i>
					Tableau de bord</a>
			</li>
			<li class="active">
				<a href="{{ path('app_relance_index') }}">
					<i class="fa fa-users"></i>
					Tous les Relances</a>
			</li>
			<!-- NOTIFICATION DROPDOWN -->
			<li id="header_notification_bar" class="dropdown">
				<a data-toggle="dropdown" class="dropdown-toggle" href="#">
					<i class="fa fa-shopping-cart"></i>
					<span class="badge bg-warning">{{ relanced|length }}
					</span>
				</a>

			</li>
			<!-- END NOTIFICATION DROPDOWN -->
		</ol>
		<br>
		{# {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEAM')  == true %}
																																																																																																																																																																																																																																																																																																																																																																																																																	<a href="{{ path('app_Relance_new') }}" class="btn btn-primary">Ajouter Relance</a>
																																																																																																																																																																																																																																																																																																																																																																																																															          	{% endif %} #}
	</section>

	<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel">


				<hr>


				<table class="table table-striped table-advance table-hover">
					<thead>

						<tr>
							<th>Prospect</th>
							<th>Motif</th>
							<th>Date Relance</th>
							<th>Comment</th>

						</tr>
					</thead>
					<tbody>

						{% for relance in relanced %}
							<tr>
								<td>{{ relance.prospect }}</td>
								<td>
									{% if relance.motifRelanced is null %}
										Autre
									{% endif %}
									{% if relance.motifRelanced == 1 %}
										Rendez-vous
									{% endif %}
									{% if relance.motifRelanced == 2 %}
										Unjoing
									{% endif %}
									{% if relance.motifRelanced == 3 %}
										Déjà Souscrit
									{% endif %}
									{% if relance.motifRelanced == 4 %}
										Attente Close
									{% endif %}
									{% if relance.motifRelanced == 5 %}
										Tarification
									{% endif %}
									{% if relance.motifRelanced == 6 %}
										Prise de Décision
									{% endif %}
									{% if relance.motifRelanced == 7 %}
										Faux Fiche
									{% endif %}
									{% if relance.motifRelanced == 8 %}
										Doublon
									{% endif %}
									{% if relance.motifRelanced == 9 %}
										Passage Concurrent
									{% endif %}
									{% if relance.motifRelanced == 10 %}
										Passage Contrat
									{% endif %}
								</td>

								<td>{{ relance.relacedAt |  date('d/m/Y, H:i:s')}}</td>
								<td>{{ relance.comment }}</td>


								<td>
									{# <a href="{{ path('app_Relance_edit', {'id': Relance.id}) }}" class="btn btn-primary btn-xs">
																																																																																																																																																	<i class="fa fa-pencil"></i>
																																																																																																																																																</a> #}
								</td>


								<td
									class="btn-toolbar">{# <a href="{{ path('app_relance_show', {'id': Relance.id}) }}" class="btn btn-success btn-xs">
																																																																																																																																																																										<i class="fa fa-eye"></i>
																																																																																																																																																																									</a> #}
								</td>

							</tr>

						</tbody>


					</tbody>


				{% endfor %}{# {% if  app.user and app.user == Relance.comrcl %}
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																	 	  Tableau
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																		  {% endif %} #}</tbody>
			<tfoot class="text-right">
				<tr>

					{# {% if app.request.get('_route') == 'Relance_search'  %} #}
					<td
						colspan="10">{# {{ knp_pagination_render(Relances, 'pagination.html.twig') }} #}
					</td>
					{# {% endif %} #}
				</tr>
			</tfoot>

		</table>
		{# </div> #}
	</div>
</div></div>{% endblock %}{% block javascripts %}{{ parent() }}<script src='/js/ad.js'>// {
